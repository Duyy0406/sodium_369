# .env.example file for Kurtosis network configuration
# Copy this to your oracle_service/.env file and update the values

# Kurtosis Network Settings
RPC_URL=http://127.0.0.1:32770
NETWORK_NAME=kurtosis
CHAIN_ID=3151908

# Kurtosis Enclave Settings
KURTOSIS_ENCLAVE_NAME=

# Smart Contract Details
# You'll need to deploy your contract first and update this address
CONTRACT_ADDRESS=
ABI_PATH=./smart_contract/artifacts/contracts/Registry.json

# Oracle Account
# This account must have funds on the specified network to send transactions.
ACCOUNT_ADDRESS=
PRIVATE_KEY=

# Optional: Agent API URL
AGENT_API_URL=http://localhost:8000

# Optional: Etherscan API (not needed for local Kurtosis network)
ETHERSCAN_API_KEY=

# Transaction Settings (optimized for local development)
GAS_LIMIT=500000
GAS_PRICE=1000000000
MAX_RETRIES=3

# Timing Settings (in seconds)
UPDATE_INTERVAL=300
LEASE_TIME_SECONDS=120
CONNECTION_TIMEOUT=30
TRANSACTION_TIMEOUT=